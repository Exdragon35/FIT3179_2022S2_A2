{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "clean_data/sea-surface-temperature-anomaly.csv"},
  "title": "Sea Surface Temperature Anomaly (1900-2020)",
  "width": 900,
  "height": 300,
  "encoding": {"x": {"field": "Year", 
                     "type": "ordinal", 
                     "axis": {"labels": false,
                              "ticks": false}}},
  "layer": [
    {
      "encoding": {
        "color": {"field": "Entity", "type": "nominal", "legend":{"orient": "none", "legendX":10, "legendY":5}},
        "y": {"field": "SSTA","type": "quantitative", "scale": {"domain": [-1, 1]}}
      },
      "layer": [
        {"mark": "line"},
        {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
      ]
    },
    {
      "transform": [{"pivot": "Entity", "value": "SSTA", "groupby": ["Year"]}],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Global", "type": "quantitative"},
          {"field": "Northern Hemisphere", "type": "quantitative"},
          {"field": "Southern Hemisphere", "type": "quantitative"},
          {"field": "Tropics", "type": "quantitative"}
        ]
      },
      "params": [{
        "name": "hover",
        "select": {
          "type": "point",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "clear": "mouseout"
        }
      }]
    }
  ]
}
