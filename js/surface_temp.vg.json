{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "clean_data/surface.csv"},
  "title": {"text": "Sea Surface Temperature Anomaly (1900-2020)","anchor": "middle"},
  "vconcat": [
      {"mark": "line",
      "width": 750,
      "height": 480,
      "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "scale": {"domain": {"param": "brush"}},
        "axis": {"title": "Year", "grid": false}
      },

        "color": {"field": "Entity", "type": "nominal", "legend":{"orient": "none", "legendX":10, "legendY":5}, "scale": {"scheme": "tableau20"}},
        
        "y": {"field": "SSTA","type": "quantitative", "scale": {"domain": [-1, 1]}},
        "tooltip":[{"field": "Year", "type": "temporal", "title": "value"},
                   {"field": "SSTA", "type": "quantitative", "title": "value",
                   "format":".2f"}]
      }
    },{
      "mark": "line",
      "width": 750,
    "height": 100,
    "params": [{
      "name": "brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "axis": {"grid": false}},
      "color": {"field": "Entity", "type": "nominal", 
                "legend":{"orient": "none", "legendX":10, "legendY":5},
                "scale": {"scheme": "tableau20"}},
      "y": {
        "field": "SSTA",
        "type": "quantitative",
        "axis": {"tickCount": 3, "grid": false}}
    }
  }
]

}
