{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Air Pollution Death Rate v.s. Use of Fossil Fuel in each Country and Year-(1990-2019)",
    "width": 650,
    "height": 600,
    "title": "Air Pollution Death Rate v.s. Use of Fossil Fuel in each Country and Year-(1990-2019)",
    "data": {"url": "clean_data/poll_death.csv"},
    
    "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"},
        {"name": "Year_selection", "value": 1990, "bind":{"input": "range", "min": 1990, "max": 2019, "step": 1, "name": "Year: "}}
      ],
    "transform": [
        {"filter": "datum.year == Year_selection"}
    ],
    "mark": {"type": "circle", "size": 200, "opacity": 0.9},
    "encoding": {
        "x": {"field":"fossil_use(kWh)", "type": "quantitative", "scale":{"type": "log", "domain": [10000000000, 50000000000000]}, 
              "title": "Fossil fuel use in each year (kWh)"},
        "y": {"field":"death_rate", "type":"quantitative", "scale":{"domain": [0, 0.002], "type":"linear"}, "title": "Death rate(%)"},
        "color": {"field":"country", "type": "nominal", "title": "Country"},
        "fillOpacity": {
            "condition": {"param": "select", "value": 1},
            "value": 0.3
          },
        "strokeWidth": {
            "condition": [
                {
                    "param": "select",
                    "empty": false,
                    "value": 2
                },
                {
                    "param": "highlight",
                    "empty": false,
                    "value": 1
                }
            ],
            "value": 0
        },
        "tooltip": [
            {"field":"country", "type": "nominal", "title": "Country"},
            {"field":"year", "type": "nominal", "title": "Year"},
            {"field":"death_rate", "type":"quantitative", "title": "Death Reate(%)"},
            {"field":"fossil_use(kWh)", "type":"quantitative", "title": "Fossil fuel use(kWh)"}
            
        ]
    }
}